@using DynamicCrudSample.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@inject DynamicCrudSample.Services.IEntityMetadataProvider EntityMetadataProvider
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name" data-theme="corporate">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DynamicCrudSample</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DynamicCrudSample.styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-base-200">
    @{
        var showSidebar = User.Identity?.IsAuthenticated ?? false;
        var isAdminUser = User?.IsInRole("Admin") ?? false;
        var entityDefinitions = EntityMetadataProvider.GetAll()
            .Where(pair => isAdminUser || pair.Value.IsPublic)
            .OrderBy(pair => pair.Value.GetDisplayName(), StringComparer.OrdinalIgnoreCase)
            .ToList();
    }
    <div class="drawer">
        <input id="app-sidebar" type="checkbox" class="drawer-toggle" />

        <div class="drawer-content flex flex-col min-h-screen">
            <header class="navbar bg-base-100 border-b border-base-300 px-3 lg:px-6">
                @if (showSidebar)
                {
                    <div class="flex-none">
                        <label for="app-sidebar" class="btn btn-ghost btn-square">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </label>
                    </div>
                }

                <div class="flex-1">
                    <a class="btn btn-ghost text-xl" asp-controller="DynamicEntity" asp-action="Index">DynamicCrudSample</a>
                </div>

                <div class="flex-none gap-2">
                    <div class="dropdown dropdown-end">
                        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                            <div class="w-10 rounded-full bg-base-300 text-base-content grid place-items-center font-semibold">
                                @if (User.Identity?.IsAuthenticated ?? false)
                                {
                                    @((User.Identity?.Name ?? "U").Substring(0, 1).ToUpperInvariant())
                                }
                                else
                                {
                                    @("G")
                                }
                            </div>
                        </div>
                        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-64 p-2 shadow">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="menu-title">
                                    <span>@L["Hello"], @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value ?? User.Identity?.Name)</span>
                                </li>
                            }
                            <li class="menu-title"><span>Language</span></li>
                            <li>
                                <div class="flex gap-2 px-2 py-1">
                                    <form asp-controller="Localization" asp-action="SetLanguage" method="post">
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="en-US" />
                                        <button type="submit" class="btn btn-ghost btn-sm btn-circle @(System.Globalization.CultureInfo.CurrentUICulture.Name == "en-US" ? "btn-active" : "")" title="English">ğŸ‡ºğŸ‡¸</button>
                                    </form>
                                    <form asp-controller="Localization" asp-action="SetLanguage" method="post">
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="zh-CN" />
                                        <button type="submit" class="btn btn-ghost btn-sm btn-circle @(System.Globalization.CultureInfo.CurrentUICulture.Name == "zh-CN" ? "btn-active" : "")" title="ä¸­æ–‡">ğŸ‡¨ğŸ‡³</button>
                                    </form>
                                    <form asp-controller="Localization" asp-action="SetLanguage" method="post">
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="ja-JP" />
                                        <button type="submit" class="btn btn-ghost btn-sm btn-circle @(System.Globalization.CultureInfo.CurrentUICulture.Name == "ja-JP" ? "btn-active" : "")" title="æ—¥æœ¬èª">ğŸ‡¯ğŸ‡µ</button>
                                    </form>
                                </div>
                            </li>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-controller="Users" asp-action="Index">@L["Users"]</a></li>
                                }
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="text-left w-full">@L["Logout"]</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Login">@L["Login"]</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </header>

            <main class="p-4 lg:p-6">
                @RenderBody()
            </main>
        </div>

        @if (showSidebar)
        {
            <div class="drawer-side z-40">
                <label for="app-sidebar" aria-label="close sidebar" class="drawer-overlay"></label>
                <aside class="bg-base-100 w-72 min-h-full border-r border-base-300">
                    <div class="p-4 border-b border-base-300 flex items-center justify-between">
                        <div>
                            <div class="text-sm opacity-70">Navigation</div>
                            <div class="font-semibold">Definitions</div>
                        </div>
                        <label for="app-sidebar" class="btn btn-ghost btn-sm btn-square" aria-label="close menu">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </label>
                    </div>

                    <ul class="menu p-3 gap-1">
                        @foreach (var definition in entityDefinitions)
                        {
                            var isActive = string.Equals(
                                Context.Request.RouteValues["controller"]?.ToString(),
                                "DynamicEntity",
                                StringComparison.OrdinalIgnoreCase) &&
                                string.Equals(
                                    Context.Request.Query["entity"],
                                    definition.Key,
                                    StringComparison.OrdinalIgnoreCase);

                            <li>
                                <a class="justify-between @(isActive ? "active" : "")"
                                   asp-controller="DynamicEntity"
                                   asp-action="Index"
                                   asp-route-entity="@definition.Key">
                                    <span>@definition.Value.GetDisplayName()</span>
                                    @if (isAdminUser)
                                    {
                                        <span class="badge badge-sm @(definition.Value.IsPublic ? "badge-success" : "badge-ghost")">
                                            @(definition.Value.IsPublic ? "Public" : "Private")
                                        </span>
                                    }
                                </a>
                            </li>
                        }
                        @if (isAdminUser)
                        {
                            <li class="mt-2"><a asp-controller="Users" asp-action="Index">@L["Users"]</a></li>
                        }
                    </ul>
                </aside>
            </div>
        }
    </div>

    @* ã‚¨ãƒ³ãƒ†ã‚£ãƒ†ã‚£é¸æŠãƒ”ãƒƒã‚«ãƒ¼ãƒ¢ãƒ¼ãƒ€ãƒ«ï¼ˆå…¨ãƒšãƒ¼ã‚¸å…±é€šï¼‰ *@
    <dialog id="entity-picker-modal" class="modal">
        <div class="modal-box max-w-3xl">
            <div class="flex items-center justify-between mb-3">
                <h3 id="entity-picker-title" class="font-bold text-lg">Select</h3>
                <form method="dialog">
                    <button class="btn btn-ghost btn-sm btn-circle">âœ•</button>
                </form>
            </div>
            <div class="mb-3">
                <input type="text" id="entity-picker-search"
                       class="input input-bordered w-full"
                       placeholder="Search..."
                       oninput="entityPickerSearch(this.value)" />
            </div>
            <div id="entity-picker-content" class="min-h-32"></div>
            @if (true)
            {
                @* è¤‡æ•°é¸æŠãƒ¢ãƒ¼ãƒ‰æ™‚ã®ç¢ºå®šãƒœã‚¿ãƒ³ï¼ˆå˜ä¸€é¸æŠã§ã¯éè¡¨ç¤ºï¼‰ *@
                <div id="entity-picker-multi-footer" class="mt-3 hidden">
                    <form method="dialog">
                        <button class="btn btn-primary">Done</button>
                    </form>
                </div>
            }
        </div>
        <form method="dialog" class="modal-backdrop">
            <button>close</button>
        </form>
    </dialog>

    <script src="https://unpkg.com/htmx.org@1.9.12"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // ã‚¨ãƒ³ãƒ†ã‚£ãƒ†ã‚£é¸æŠãƒ”ãƒƒã‚«ãƒ¼å…±é€šãƒ­ã‚¸ãƒƒã‚¯
        var _pickerConfig = null;
        var _pickerSearchTimer = null;

        // ãƒ”ãƒƒã‚«ãƒ¼ã‚’é–‹ãï¼ˆBrowse ãƒœã‚¿ãƒ³ã® onclick ã‹ã‚‰å‘¼ã°ã‚Œã‚‹ï¼‰
        function openEntityPicker(btn) {
            var fieldName = btn.dataset.pickerField;
            var entity    = btn.dataset.pickerEntity;
            var displayCol= btn.dataset.pickerDisplayCol || 'Id';
            var multi     = btn.dataset.pickerMulti === 'true';

            _pickerConfig = { fieldName: fieldName, entity: entity, displayCol: displayCol, multi: multi };

            var title = document.getElementById('entity-picker-title');
            if (title) title.textContent = 'Select ' + entity;

            var footer = document.getElementById('entity-picker-multi-footer');
            if (footer) footer.classList.toggle('hidden', !multi);

            var searchEl = document.getElementById('entity-picker-search');
            if (searchEl) searchEl.value = '';

            loadPickerContent('', 1);
            document.getElementById('entity-picker-modal').showModal();
        }

        // ãƒ”ãƒƒã‚«ãƒ¼ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’ HTMX ã§èª­ã¿è¾¼ã‚€
        function loadPickerContent(search, page) {
            if (!_pickerConfig) return;
            page = page || 1;
            var cfg = _pickerConfig;
            var url = '/DynamicEntity/PickerList'
                + '?entity=' + encodeURIComponent(cfg.entity)
                + '&targetField=' + encodeURIComponent(cfg.fieldName)
                + '&displayColumn=' + encodeURIComponent(cfg.displayCol)
                + '&multi=' + (cfg.multi ? 'true' : 'false')
                + '&search=' + encodeURIComponent(search || '')
                + '&page=' + page;
            htmx.ajax('GET', url, { target: '#entity-picker-content', swap: 'innerHTML' });
        }

        // æ¤œç´¢å…¥åŠ›ã®ãƒ‡ãƒã‚¦ãƒ³ã‚¹
        function entityPickerSearch(value) {
            clearTimeout(_pickerSearchTimer);
            _pickerSearchTimer = setTimeout(function () {
                loadPickerContent(value, 1);
            }, 300);
        }

        // ãƒ”ãƒƒã‚«ãƒ¼ãƒšãƒ¼ã‚¸ãƒ³ã‚°
        function loadPickerPage(page) {
            var searchEl = document.getElementById('entity-picker-search');
            var search = searchEl ? searchEl.value : '';
            loadPickerContent(search, page);
        }

        // ãƒ†ãƒ¼ãƒ–ãƒ«è¡Œã‚¯ãƒªãƒƒã‚¯æ™‚ã®é¸æŠå‡¦ç†
        function pickerSelectFromRow(row) {
            if (!_pickerConfig) return;
            var id    = row.dataset.pickerId;
            var label = row.dataset.pickerLabel;
            var cfg   = _pickerConfig;

            if (cfg.multi) {
                // è¤‡æ•°é¸æŠ: ãƒãƒƒãƒ—ã‚’è¿½åŠ ï¼ˆé‡è¤‡ã¯ç„¡è¦–ï¼‰
                var hidden = document.getElementById('picker-value-' + cfg.fieldName);
                if (!hidden) return;
                var vals = hidden.value ? hidden.value.split(',').filter(function(v) { return v !== ''; }) : [];
                if (vals.indexOf(id) !== -1) return; // æ—¢é¸æŠæ¸ˆã¿
                vals.push(id);
                hidden.value = vals.join(',');

                var chips = document.getElementById('picker-chips-' + cfg.fieldName);
                if (chips) {
                    var chip = document.createElement('div');
                    chip.className = 'badge badge-neutral gap-1';
                    chip.dataset.id = id;
                    chip.innerHTML = label
                        + ' <button type="button" onclick="removePickerChip(\''
                        + cfg.fieldName + '\',\'' + id.replace(/'/g, "\\'") + '\',this.parentElement)">âœ•</button>';
                    chips.appendChild(chip);
                }
                // è¤‡æ•°é¸æŠãƒ¢ãƒ¼ãƒ‰ã§ã¯ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ãªã„
            } else {
                // å˜ä¸€é¸æŠ: å€¤ã¨ãƒ©ãƒ™ãƒ«ã‚’ã‚»ãƒƒãƒˆã—ã¦ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹
                var hidden2 = document.getElementById('picker-value-' + cfg.fieldName);
                var display = document.getElementById('picker-display-' + cfg.fieldName);
                if (hidden2) hidden2.value = id;
                if (display) {
                    if (display.tagName === 'INPUT') {
                        display.value = label;
                    } else {
                        display.textContent = label;
                    }
                }
                document.getElementById('entity-picker-modal').close();
            }
        }

        // ãƒ”ãƒƒã‚«ãƒ¼ãƒãƒƒãƒ—ã‚’å‰Šé™¤ã™ã‚‹
        function removePickerChip(fieldName, id, chipEl) {
            var hidden = document.getElementById('picker-value-' + fieldName);
            if (hidden) {
                var vals = hidden.value.split(',').filter(function(v) { return v !== id && v !== ''; });
                hidden.value = vals.join(',');
            }
            if (chipEl) chipEl.remove();
        }

        // å˜ä¸€ãƒ”ãƒƒã‚«ãƒ¼å€¤ã‚’ã‚¯ãƒªã‚¢ï¼ˆãƒ•ã‚©ãƒ¼ãƒ ç”¨ï¼‰
        function clearPickerValue(fieldName) {
            var hidden = document.getElementById('picker-value-' + fieldName);
            var display = document.getElementById('picker-display-' + fieldName);
            if (hidden) hidden.value = '';
            if (display) {
                if (display.tagName === 'INPUT') {
                    display.value = '';
                } else {
                    display.textContent = '(All)';
                }
            }
        }

        // ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ç”¨ãƒ”ãƒƒã‚«ãƒ¼å€¤ã‚¯ãƒªã‚¢
        function clearPickerFilterValue(fieldName) {
            var hidden = document.getElementById('picker-value-' + fieldName);
            var display = document.getElementById('picker-display-' + fieldName);
            var chips = document.getElementById('picker-chips-' + fieldName);
            if (hidden) hidden.value = '';
            if (display) {
                if (display.tagName === 'INPUT') {
                    display.value = '';
                } else {
                    display.textContent = '(All)';
                }
            }
            if (chips) chips.innerHTML = '';
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
